<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_selector_001_white_button"
    android:minHeight="@dimen/common_listview_item_min_height"
    android:orientation="horizontal" >

    <!-- android:padding="@dimen/common_listview_item_padding" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_selector_001_white_button"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@drawable/base_selector_011_text_color"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/right_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@null"
            android:src="@drawable/main_002_arrowhead_right" />
    </RelativeLayout>

    <com.huawei.xs.widget.contacts.XSWPhonePortraitImageView
        android:id="@+id/header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" />

</RelativeLayout>
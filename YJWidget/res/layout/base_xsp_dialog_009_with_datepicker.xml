<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="280dp"
    android:background="@color/whitesmoke"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/layout_select_dialog_title"
        style="@style/dialogTitleStyle"
        android:text="@string/str_base_title_select" />

    <DatePicker
        android:id="@+id/dialog_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/base_selector_011_alert_dialog_mid_dup_selector"
            android:gravity="center"
            android:text="@string/str_base_action_cancel"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_size3" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/base_selector_011_alert_dialog_mid_dup_selector"
            android:gravity="center"
            android:text="@string/str_base_action_ok"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_size3" />
    </LinearLayout>

</LinearLayout>
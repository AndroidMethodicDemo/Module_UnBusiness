<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="myProgressBarStyleSmall">
　　                         <item name="android:indeterminateDrawable">@drawable/progress_small</item>
　　                          <item name="android:minWidth">16dip</item>
　　                          <item name="android:maxWidth">16dip</item>
　　                          <item name="android:minHeight">16dip</item>
　　                          <item name="android:maxHeight">16dip</item>
    </style>
    <style name="WelcomeTheme" parent="@android:Theme.Black">
        <item name="android:windowBackground">@drawable/main_006_begin_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Transparet theme -->
    <style name="Transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:divider">@null</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">@android:color/transparent</item>
    </style>

    <style name="listviewDivideNormal">
        <item name="android:background">@color/listview_divide_line</item>
        <item name="android:layout_height">@dimen/listview_divide_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="listviewDivideNoStatus">
        <item name="android:background">@color/listview_divide_line</item>
        <item name="android:layout_height">@dimen/listview_divide_height</item>
        <item name="android:layout_marginTop">@dimen/common_listview_item_margin_top_1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="listviewDivideHasStatus">
        <item name="android:background">@color/listview_divide_line</item>
        <item name="android:layout_height">@dimen/listview_divide_height</item>
        <item name="android:layout_marginTop">@dimen/common_listview_item_margin_top_2</item>
        <item name="android:layout_marginLeft">@dimen/common_listview_item_margin_top_2</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="listviewDivideStyle">
        <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">@dimen/listview_divide_height</item>
         <item name="android:layout_marginLeft">@dimen/divide_line_margin_left</item>
        <item name="android:background">@color/listview_divide_line</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="contentTxtStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="createGroupContentTxtStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="noteTxtStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="leftSingleTxtStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_main_entrance_text</item>
    </style>

    <style name="TextViewStyle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AnimFade" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/base_anim_set_001_fade_in</item>
        <item name="android:windowExitAnimation">@anim/base_anim_set_002_fade_out</item>
    </style>

    <!-- <item name="android:visibility">gone</item> -->
    <!-- <item name="android:background">@drawable/base_selector_008_alert_dialog_mid_selector</item> -->
    <!-- <item name="android:gravity">center_vertical</item> -->
    <style name="longClickPopupItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size3</item>
    </style>

    <style name="dialogTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/title_bar_bg_color</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="callLogTitleDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/redsoil</item>
    </style>

</resources>